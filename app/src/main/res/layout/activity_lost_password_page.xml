<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".start.LoginChoicePage">

    <TextView
        android:id="@+id/tv_title_subname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="130dp"
        android:fontFamily="@font/pretendardregular"
        android:lineSpacingExtra="5dp"


        android:text="세종인 끼리\n간편한 중고 거래"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_title_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:fontFamily="@font/seolleimcool"
        android:text="세종끼리"
        android:textColor="#000000"

        android:textSize="40sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_title_subname"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_subname" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_next"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="90dp"
        android:background="@drawable/design_next_btn_noinput"
        android:fontFamily="@font/pretendardsemibold"
        android:padding="20dp"
        android:text="다음"
        android:textColor="#fff"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/et_new_password_ok_input"
        app:layout_constraintStart_toStartOf="@+id/et_new_password_ok_input" />

    <EditText
        android:id="@+id/et_new_password_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/radius_redcolor_line"
        android:ems="10"
        android:inputType="textPassword"
        android:letterSpacing=".3"
        android:padding="10dp"
        android:paddingStart="20dp"
        app:layout_constraintBottom_toTopOf="@+id/et_new_password_ok_input"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/et_new_password_ok_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/radius_redcolor_line"
        android:ems="10"
        android:inputType="textPassword"
        android:letterSpacing=".3"
        android:padding="10dp"
        android:paddingStart="20dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_next"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_not_accord_password_error_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/pretendardmedium"
        android:text="비번이 일치하지 않습니다"
        android:textColor="#f00"
        android:textSize="10sp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@id/et_new_password_ok_input"
        app:layout_constraintTop_toBottomOf="@id/et_new_password_ok_input" />


    <TextView
        android:id="@+id/tv_id_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:text="비밀번호 재설정"
        android:textColor="#000"
        app:layout_constraintBottom_toTopOf="@+id/et_new_password_input"
        app:layout_constraintStart_toStartOf="@+id/et_new_password_input" />

    <TextView
        android:id="@+id/tv_password_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:text="새 비밀번호 확인"

        android:textColor="#000"
        app:layout_constraintBottom_toTopOf="@+id/et_new_password_ok_input"
        app:layout_constraintStart_toStartOf="@+id/et_new_password_ok_input" />

    <TextView
        android:id="@+id/tv_account_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/pretendardregular"
        android:lineSpacingExtra="5dp"
        android:text="__님, 세종인 인증이 완료되었습니다.\n새롭게 사용할 비밀번호를 입력해 주세요 :D"
        android:textColor="#000"
        app:layout_constraintBottom_toTopOf="@+id/tv_id_text"
        app:layout_constraintStart_toStartOf="@+id/tv_id_text" />


</androidx.constraintlayout.widget.ConstraintLayout>