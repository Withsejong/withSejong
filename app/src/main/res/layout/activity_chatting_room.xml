<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".chatting.ChatFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clo_fragment_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/rcv_chatting_list"
        >

        <ImageButton
            android:id="@+id/ibtn_back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:background="#00000000"
            android:src="@drawable/icon_back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/tv_upper_bookname_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/pretendardmedium"
            android:paddingVertical="3dp"
            android:text="컴퓨터 네트워크"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/ibtn_back"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/design_post_state_indicator_selling"
            app:layout_constraintStart_toEndOf="@id/tv_upper_bookname_indicator"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="판매중"
            android:layout_marginStart="15dp"
            android:paddingHorizontal="10dp"
            android:paddingVertical="3dp"
            android:fontFamily="@font/pretendardmedium"
            android:textColor="#fff"
            android:textSize="7sp"


            />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/v_title_divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"

        android:background="#EDEDED"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/clo_fragment_title"
        />




    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_chatting_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/v_title_divider"
        app:layout_constraintBottom_toTopOf="@id/tv_suggest_location"
        tools:listitem="@layout/item_chat"
        />



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clo_lower_chatting_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_suggest_date"
        >


        <ImageButton
            android:id="@+id/ibtn_additional_function"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:background="#00000000"
            android:src="@drawable/icon_chatting_additional_function"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />


        <EditText
            android:id="@+id/et_message_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/pretendardmedium"
            android:paddingVertical="7dp"
            android:paddingHorizontal="10dp"
            android:hint="채팅을 입력해주세요"


            android:background="@drawable/design_send_chatting"
            android:textSize="12sp"
            app:layout_constraintEnd_toStartOf="@id/iv_send_msg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/ibtn_additional_function"
            app:layout_constraintTop_toTopOf="parent"

            />
        <ImageView
            android:id="@+id/iv_send_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_send_msg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintStart_toEndOf="@id/et_message_input"
            />



    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:id="@+id/tv_suggest_date"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="거래 날짜 정하기"
        app:layout_constraintBottom_toTopOf="@id/clo_lower_chatting_input"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_suggest_location"
        android:background="@drawable/design_chatting_suggestion"
        android:padding="5dp"
        android:paddingStart="20dp"
        android:fontFamily="@font/pretendardmedium"
        android:textSize="14sp"
        android:textColor="#fff"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/tv_suggest_location"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="장소 제안하기"
        app:layout_constraintBottom_toTopOf="@id/tv_suggest_date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rcv_chatting_list"
        android:background="@drawable/design_chatting_suggestion"
        android:padding="5dp"
        android:paddingStart="20dp"
        android:fontFamily="@font/pretendardmedium"
        android:textSize="14sp"
        android:textColor="#fff"
        android:layout_margin="10dp"
        android:visibility="gone"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />



</androidx.constraintlayout.widget.ConstraintLayout>