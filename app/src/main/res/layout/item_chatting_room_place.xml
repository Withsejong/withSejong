<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_margin="10dp"

        android:background="@drawable/design_item_place_list"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <TextView
            android:id="@+id/tv_place_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="군자관"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="15dp"
            android:fontFamily="@font/pretendardsemibold"
            android:textSize="15sp"
            android:textColor="#fff"

            />
        <TextView
            android:id="@+id/tv_place_detail1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_place_name"
            app:layout_constraintStart_toStartOf="@id/tv_place_name"
            android:fontFamily="@font/pretendardregular"
            android:textSize="8sp"
            android:text="# 돌계단을 올라가야 해요\n# 돌계단을 올라가야 해요\n# 돌계단을 올라가야 해요"
            android:lineSpacingMultiplier="1.3"
            app:layout_constraintBottom_toTopOf="@id/v_divider"
            android:textColor="#fff"

            />
        <View
            android:id="@+id/v_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias=".7"
            android:background="#919191"
            android:layout_marginHorizontal="5dp"

            />

        <TextView
            android:id="@+id/tv_place_suggest_btn"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="장소 제안하기"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textAlignment="center"
            android:fontFamily="@font/pretendardregular"
            app:layout_constraintTop_toBottomOf="@id/v_divider"
            android:textSize="10sp"
            android:gravity="center"
            android:textColor="#fff"


            />





    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>