            android:name=".login.AccountInPageSync"
            android:exported="false" />
        <activity
            android:name=".login.LostPasswordPage"
            android:exported="false" /> <!-- 다른 Acticity -->
        <activity
            android:name=".start.LoginStartPage"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="false" />
        <activity
            android:name=".post.PostActivity"
            android:exported="false" />
        <activity
            android:name=".login.MakePasswordPage"
            android:exported="false" />
        <activity
            android:name=".login.LoginPage"
            android:exported="false" /> <!-- 첫 화면으로 보여 줄 Acticity -->
        <!-- android:theme="@style/Theme.AppCompat.Light.NoActionBar"> -->
        <activity
            android:name=".start.LoginChoicePage"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>